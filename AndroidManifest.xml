<?xml version="1.0" encoding="utf-8"?>
<!-- android:screenOrientation="portrait" pour bloquer en portrait -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iiens.net"
    android:versionCode="7"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="GlobalState"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >

        <!-- Splash Screen -->
        <activity
            android:name="com.iiens.net.SplashScreen"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login -->
        <activity
            android:name="com.iiens.net.Login"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="adjustPan" >
        </activity>

        <!-- Main -->
        <activity
            android:name="com.iiens.net.Main"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.iiens.net.PhotosFullImageActivity" >
        </activity>

        <!-- Media -->
        <activity
            android:name="com.iiens.net.Media"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        
    </application>

</manifest>