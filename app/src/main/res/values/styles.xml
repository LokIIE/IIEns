<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="IIEnsTheme.Light" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:actionBarStyle">@style/ActionBarLight</item>
        <item name="android:colorPrimary">@color/primaryColor.Light</item>
        <item name="android:colorPrimaryDark">@color/primaryDarkColor.Light</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/primaryTextColor.Light</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor.Light</item>
        <item name="android:colorAccent">@color/secondaryDarkColor.Light</item>
        <item name="android:colorControlNormal">@color/gray</item>
        <item name="android:colorControlActivated">@color/secondaryDarkColor.Light</item>

        <item name="bottomNavigationStyle">@style/BottomNavigation.Light</item>
        <item name="selectorRef">@drawable/selector_light</item>
        <item name="iconColor">@color/secondaryColor.Light</item>
    </style>

    <style name="IIEnsTheme.Dark" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:actionBarStyle">@style/ActionBarDark</item>
        <item name="android:colorPrimary">@color/primaryColor.Dark</item>
        <item name="android:colorPrimaryDark">@color/primaryDarkColor.Dark</item>
        <item name="android:colorBackground">@color/primaryDarkColor.Dark</item>
        <item name="android:textColor">@color/primaryTextColor.Dark</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor.Dark</item>
        <item name="android:colorAccent">@color/secondaryDarkColor.Dark</item>
        <item name="android:colorControlNormal">@color/gray</item>
        <item name="android:colorControlActivated">@color/secondaryDarkColor.Dark</item>

        <item name="bottomNavigationStyle">@style/BottomNavigation.Dark</item>
        <item name="selectorRef">@drawable/selector_dark</item>
        <item name="iconColor">@color/secondaryColor.Dark</item>
    </style>

    <style name="ActionBarLight">
        <item name="android:textColorPrimary">@color/primaryTextColor.Light</item>
        <item name="android:background">@color/primaryColor.Light</item>

    </style>

    <style name="ActionBarDark">
        <item name="android:textColorPrimary">@color/primaryTextColor.Dark</item>
        <item name="android:background">@color/primaryColor.Dark</item>
    </style>

    <style name="BottomNavigation.Light" parent="IIEnsTheme.Light">
        <item name="android:elevation">4dp</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="BottomNavigation.Dark" parent="IIEnsTheme.Dark">
        <item name="android:elevation">4dp</item>
        <item name="android:colorPrimary">@color/primaryColor.Dark</item>
        <item name="android:textColor">@color/ltGray</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/bottom_line</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="TweetLightStyle" parent="tw__TweetLightStyle">
    </style>

    <style name="TweetDarkStyle" parent="tw__TweetDarkStyle">
        <item name="tw__container_bg_color">@color/primaryDarkColor.Dark</item>
    </style>

</resources>
