<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:fitsSystemWindows="true"
    tools:context="com.iiens.net.Main">

    <!-- Contenu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="?android:actionBarStyle"
            android:elevation="4dp" />

        <FrameLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Webview connexion arise -->
        <include layout="@layout/arise_webview" />

    </LinearLayout>

    <!-- Bottom navigation -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.BottomNavigationView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:theme="?attr/bottomNavigationStyle"
            app:itemBackground="?attr/selectorRef"
            app:itemIconTint="?attr/selectorRef"
            app:itemTextColor="?android:textColor"
            app:menu="@menu/bottom_navigation"
            android:visibility="gone"/>

    </RelativeLayout>

    <!-- Navigation drawer -->

    <android.support.design.widget.NavigationView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/navigation_drawer"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:theme="?attr/navigationDrawerStyle"
        app:headerLayout="@layout/navigation_drawer_header"
        app:itemIconTint="?attr/selectorRef"
        app:itemTextColor="?android:textColor"
        app:menu="@menu/navigation_drawer"
        android:elevation="4dp" />

</android.support.v4.widget.DrawerLayout>